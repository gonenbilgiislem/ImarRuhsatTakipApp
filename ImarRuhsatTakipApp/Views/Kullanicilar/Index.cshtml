@model IEnumerable<ImarRuhsatTakipApp.Models.Kullanicilar>

@{
    ViewBag.Title = "Index";
}

<br/>
<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">Kullanıcı Ekle</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                <div class="table-toolbar">
                    <div class="btn-group">
                        <a href="@Url.Action("Create","Kullanicilar")" button class="btn btn-success"><i class="icon-plus icon-white" title="Kayıt Ekle"></i></a>
                    </div>
                    <div class="btn-group pull-right">
                        <button data-toggle="dropdown" class="btn dropdown-toggle">Araçlar <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="#">Yazdır</a></li>
                            <li><a href="#">PDF Kaydet</a></li>
                            <li><a href="#">Excele Kaydet</a></li>
                        </ul>
                    </div>
                </div>


                <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Kullanici_Ad_Soyad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sifre)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Kullanici_Ad_Soyad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sifre)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Kullanicilar",new {id = item.Id })" button class="btn btn-info"> <i class="icon-pencil icon-white" title="Kaydı Düzenle"></i></a>
                                    <a href="@Url.Action("Delete","Kullanicilar",new {id = item.Id })" button class="btn btn-danger"> <i class="icon-remove icon-white" title="Kaydı Sil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

